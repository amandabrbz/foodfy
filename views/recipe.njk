{% extends "layout.njk" %}

{% block head %}

  <title>Receitas - Foodfy</title>

{% endblock %}

{% block content %}
  <section class="mais-acessadas">
    <div class="cards">

      {% for item in items %}

        <div class="card" id="{{item.name}}">
          <div class="card-img">
            <img src="/img/{{item.img}}" alt="Imagem de {{item.name}}">
          </div>
          <div class="card-name">
            <h6>{{item.name}}</h6>
          </div>
          <div class="card-author">
            <p>
              por
              {{item.author}}
            </p>
          </div>
        </div>

      {% endfor %}

    </div>

  </section>

  <div class="modal-overlay">
    <div class="modal">
      <a class="close-modal">
        <i class="material-icons">close</i>
      </a>
      <div class="modal-content">
        <div class="card" id="{{item.name}}">
          <div class="card-img">
            <img src="/img/{{item.img}}" alt="Imagem de {{item.name}}">
          </div>
          <div class="card-name">
            <h6>{{item.name}}</h6>
          </div>
          <div class="card-author">
            <p>
              por
              {{item.author}}
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <script src="/js/scripts.js"></script>

{% endblock %}